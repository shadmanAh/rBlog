<!DOCTYPE html>
<html>
  <head>
    <title>RBlog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container-fluid">
            <a class="navbar-brand" href="index.html"><h1>rBlog<span>/Manager</span></h1></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                <li class="<%= params[:controller] == 'admin/posts' ? 'active' : '' %> nav-link">
                  <%= link_to "Post", admin_posts_path %>
                </li>
                <li class="<%= params[:controller] == 'admin/categories' ? 'active' : '' %> nav-link">
                  <%= link_to "Ctegories", admin_categories_path %>
                </li>
                <li class="<%= params[:controller] == 'admin/users' ? 'active' : '' %> nav-link">
                  <%= link_to "Users", admin_users_path %>
                </li>
                </ul>

                <%= render 'partials/admin/search' %>

            </div>
            </div>
        </nav>

        <section>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                      <div class="well">
                        <!--Alerts & Messages-->
                        <% if flash[:notice] %>
                          <div class="alert alert-success"><%= flash[:notice] %></div>
                        <%end%>

                        <% if flash[:alert] %>
                          <div class="alert alert-danger"><%= flash[:alert] %></div>
                        <%end%>
                        <%= yield %>
                      </div>
                    </div>
                    
                </div>
            </div>
        </section>
        
        <footer>
            <p>Copyright &copy; 2021, rBlog | <a href="login.html">Admin Login</a></p>
        </footer>



        <script src="js/bootstrap.js"></script>
  </body>
</html>
