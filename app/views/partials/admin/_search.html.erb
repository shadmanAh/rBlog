<% if params[:controller] == 'admin/posts' %>
    <%= form_tag(admin_posts_path, :method => "get", id:"search-form", class: "d-flex") do %>
        <div class="form-group">
            <%= text_field_tag :search, params[:search], placeholder: "Search Posts", class: "form-control me-2" %>
        </div>
        <%= submit_tag "Search", :name => nil, class: "btn btn-outline-success" %>
    <% end %>
